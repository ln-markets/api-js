{
  "name": "@ln-markets/api",
  "version": "1.6.1",
  "description": "A set of wrappers to easily communicate with LN Markets API !",
  "main": "src/index.js",
  "module": "esm/index.mjs",
  "files": [
    "src/**/*.js",
    "esm/**/*.mjs"
  ],
  "exports": {
    ".": {
      "import": "./esm/index.mjs",
      "require": "./src/index.js"
    }
  },
  "author": "BOTREL Kilian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ln-markets/api-js/issues"
  },
  "homepage": "https://github.com/ln-markets/api-js/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ln-markets/api-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ln-markets",
    "api",
    "trading",
    "sats",
    "bitcoin"
  ],
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "scripts": {
    "test": "mocha test/index.js --bail --exit",
    "prepare": "husky install",
    "eslint": "eslint --fix",
    "prettier": "prettier --write",
    "lint": "eslint --color './**/*.{js,mjs}'",
    "format": "prettier --write './**/*.{js,mjs}'"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "chai": "4.3.6",
    "dotenv": "16.0.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "mocha": "9.2.2",
    "prettier": "2.6.1"
  }
}
